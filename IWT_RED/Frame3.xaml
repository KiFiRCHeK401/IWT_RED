<Page x:Class="IWT_RED.Frame3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:IWT_RED"
    mc:Ignorable="d"
    Title="Innovative Weapons Technologies" 
    MinHeight="1080"
    MinWidth="1920" d:DesignHeight="1092" d:DesignWidth="1920">

    <Grid Name="Grid" Background="Black" Keyboard.KeyDown="keyDown">

        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="682"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image VerticalAlignment="Stretch" Width="auto" Height="auto"  HorizontalAlignment="Right" Margin="0,0,0,0"   Panel.ZIndex="3" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Source="/Frame3.png"/>

        <StackPanel Width="693" Height="719" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">

            <Border MinHeight="100">
                <TextBlock FontStyle="Italic" FontSize="42" HorizontalAlignment="Center" TextAlignment="Center" Foreground="White" FontWeight="Bold">
                    ПОДТВЕРДИТЕ <LineBreak/> УКАЗАННЫЙ НОМЕР <LineBreak/> ТЕЛЕФОНА
                </TextBlock>
            </Border>

            <Border MinHeight="120">
                <TextBlock VerticalAlignment="Center" FontSize="28" Foreground="Gray" TextAlignment="Center">
                    Введите код из СМС
                </TextBlock>
            </Border>





            <DockPanel MinHeight="240" >
                <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Height="141"  Width="90" Margin="2,2,2,2" BorderBrush="Gray"  BorderThickness="2" >
                        <TextBox Background="Transparent"  TextChanged="TextChanged1" FontSize="141" FontFamily="Montserrat" Foreground="Gray" TextAlignment="Left" VerticalAlignment="Center" x:Name="TB4" Height="141"  Width="90" BorderBrush="Black" MaxLength="1">
                        </TextBox>
                    </Border>

                    <Border Height="141"  Width="90" Margin="2,2,2,2" BorderBrush="Gray"  BorderThickness="2">
                        <TextBox Background="Transparent"  TextChanged="TextChanged2" FontSize="141" FontFamily="Montserrat" Foreground="Gray" TextAlignment="Left" VerticalAlignment="Center" x:Name="TB5" Height="141"  Width="90" BorderBrush="Black" MaxLength="1">
                        </TextBox>
                    </Border>

                    <Border Height="141"  Width="90" Margin="2,2,2,2" BorderBrush="Gray"  BorderThickness="2">
                        <TextBox Background="Transparent"  TextChanged="TextChanged3" FontSize="141" FontFamily="Montserrat" Foreground="Gray" TextAlignment="Left" VerticalAlignment="Center" x:Name="TB6" Height="141"  Width="90" BorderBrush="Black" MaxLength="1">
                        </TextBox>
                    </Border>
                </DockPanel>


            </DockPanel>


            <Border Width="693px" Height="122px" Background="#FBB911" Mouse.MouseDown="AcceptFrame3"  VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <TextBlock TextAlignment="Center" FontFamily="Montserrat" VerticalAlignment="Center" FontWeight="Bold"  FontSize="32" Foreground="Black"> Подтвердить номер</TextBlock>
            </Border>
            <Border VerticalAlignment="Bottom" MinHeight="100">
                <TextBlock Mouse.MouseDown="GetCodeAgane" FontFamily="Montserrat" VerticalAlignment="Center" TextDecorations="Underline"  FontSize="28" Foreground="Gray" TextAlignment="Center">Прислать код повторно</TextBlock>
            </Border>
        </StackPanel>


    </Grid>
</Page>
